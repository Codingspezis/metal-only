<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="8dp" >

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="4dip"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:max="100"
        android:progress="50" />

    <ImageView
        android:id="@id/modImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/empty"
        android:scaleType="centerCrop"
        android:singleLine="true" />

    <TextView
        android:id="@id/txtMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/modImage"
        android:layout_marginTop="4dp"
        android:gravity="right"
        android:textIsSelectable="false" />

    <TextView
        android:id="@id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txtMod"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/txtTime"
        android:layout_toRightOf="@id/modImage"
        android:singleLine="true"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/modImage"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:singleLine="true"
        android:textIsSelectable="false" />

    <TextView
        android:id="@id/txtGenre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txtTime"
        android:layout_below="@id/txtTitle"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/txtTime"
        android:layout_toRightOf="@id/modImage"
        android:singleLine="true"
        android:textIsSelectable="false" />

</RelativeLayout>