<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@attr/selectableItemBackground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp" >

    <ImageView
        android:id="@id/modImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/empty"
        android:scaleType="centerCrop"
        android:src="@drawable/image_bg" />

    <TextView
        android:id="@id/txtMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:text="Moderator"
        android:textIsSelectable="false" />

    <TextView
        android:id="@id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/modImage"
        android:layout_alignRight="@id/txtMod"
        android:layout_below="@id/txtMod"
        android:singleLine="true"
        android:text="@string/time"
        android:textIsSelectable="false" />

    <TextView
        android:id="@id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/modImage"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@id/txtMod"
        android:layout_toRightOf="@id/modImage"
        android:singleLine="true"
        android:text="@string/titleDummy"
        android:textIsSelectable="false" />

    <!-- android:textStyle="bold" -->
    <!-- android:typeface="sans" -->

    <TextView
        android:id="@id/txtGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txtTime"
        android:layout_alignLeft="@id/txtTitle"
        android:layout_below="@id/txtTitle"
        android:layout_toLeftOf="@id/txtTime"
        android:layout_toRightOf="@id/modImage"
        android:singleLine="true"
        android:text="@string/genreDummy"
        android:textIsSelectable="false" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="4dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:max="100"
        android:minHeight="48dp"
        android:progress="50" />

</RelativeLayout>